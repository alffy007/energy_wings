---
import '../styles/global.css';
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import WebsiteLoader from '../components/WebsiteLoader.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Energy Wings Diesel - Your trusted partner in diesel solutions. We provide high-quality diesel products and services for various industries." />
    <meta name="keywords" content="diesel, energy, fuel, industrial, services, products" />
    <meta name="author" content="Energy Wings Diesel" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://energywingsdiesel.com/" />
    <meta property="og:title" content="Energy Wings Diesel" />
    <meta property="og:description" content="Your trusted partner in diesel solutions. We provide high-quality diesel products and services for various industries." />
    <meta property="og:image" content="/social-image.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://energywingsdiesel.com/" />
    <meta property="twitter:title" content="Energy Wings Diesel" />
    <meta property="twitter:description" content="Your trusted partner in diesel solutions. We provide high-quality diesel products and services for various industries." />
    <meta property="twitter:image" content="/social-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href={logo.src}>
    <link rel="apple-touch-icon" href={logo.src}>
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#D4AF37" />
    <meta name="msapplication-TileColor" content="#D4AF37" />
    <meta name="theme-color" content="#D4AF37" />

    <title>Energy Wings Diesel | Your Trusted Diesel Solutions Partner</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <WebsiteLoader />
    <slot />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	html {
		scroll-behavior: smooth;
	}
</style>