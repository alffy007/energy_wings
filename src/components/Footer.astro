<style>
    .footer {
        background: #000;
        color: #fff;
        padding: 4rem 2rem;
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 4rem;
    }

    .footer-logo {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .logo-container {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
    }

    .logo-image {
        height: 65px;
        width: 65px;
        filter: brightness(0) invert(1);
        object-fit: contain;
        margin-top: -10px;
    }

    .textlogo-image {
        height: 30px;
        width: auto;
        filter: brightness(0) invert(1);
        object-fit: contain;
    }

    .footer-description {
        color: #ffffff;
        opacity: 0.8;
        line-height: 1.6;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    .footer-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .footer-links a {
        color: #ffffff;
        text-decoration: none;
        opacity: 0.8;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

    .footer-links a:hover {
        color: #D4AF37;
        opacity: 1;
    }

    .footer-contact {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer-contact li {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .footer-contact .icon {
        width: 24px;
        height: 24px;
        color: #D4AF37;
        flex-shrink: 0;
        margin-top: 0.2rem;
    }

    .footer-contact p {
        color: #ffffff;
        opacity: 0.8;
        line-height: 1.6;
        font-size: 1rem;
    }

    .footer-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #D4AF37;
        margin-bottom: 1rem;
    }

    .footer-bottom {
        margin-top: 3rem;
        padding: 2rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-bottom .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .copyright {
        color: #ffffff;
        opacity: 0.8;
    }

    .footer-legal {
        display: flex;
        gap: 2rem;
    }

    .footer-legal a {
        color: #ffffff;
        text-decoration: none;
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .footer-legal a:hover {
        color: #D4AF37;
        opacity: 1;
    }

    .footer-contact a {
        color: #ffffff;
        text-decoration: none;
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .footer-contact a:hover {
        color: #D4AF37;
        opacity: 1;
    }

    @media (max-width: 1024px) {
        .footer-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .footer-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-bottom .container {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .footer-legal {
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
        }
    }

    .footer-bottom-right {
        text-align: center;
        padding: 1rem 0;
        background: rgba(212, 175, 55, 0.1);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .footer-bottom-right p {
        margin: 0;
        color: #ffffff;
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .footer-bottom-right a {
        color: #D4AF37;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-left: 0.3rem;
    }

    .footer-bottom-right a:hover {
        color: #ffffff;
        text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
    }

    .footer-bottom-right:hover {
        background: rgba(212, 175, 55, 0.15);
        transform: translateY(-2px);
    }
</style>