<style>
    .industries-section {
        padding: 6rem 0;
        background: linear-gradient(to bottom, #1a1a1a, #000000);
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(to right, #ffffff, #D4AF37);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .section-subtitle {
        font-size: 1.25rem;
        color: #D4AF37;
        max-width: 600px;
        margin: 0 auto;
    }

    .industries-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        justify-content: center;
    }

    .industry-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid rgba(212, 175, 55, 0.1);
        position: relative;
        overflow: hidden;
        width: 300px;
        flex: 0 0 auto;
    }

    .industry-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(to right, transparent, #D4AF37, transparent);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .industry-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(212, 175, 55, 0.3);
    }

    .industry-card:hover::before {
        transform: scaleX(1);
    }

    .industry-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: rgba(212, 175, 55, 0.1);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .industry-icon svg {
        width: 40px;
        height: 40px;
        color: #D4AF37;
        transition: all 0.3s ease;
    }

    .industry-card:hover .industry-icon {
        background: rgba(212, 175, 55, 0.2);
        transform: scale(1.1);
    }

    .industry-card:hover .industry-icon svg {
        transform: scale(1.1);
    }

    .industry-card h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #ffffff;
        margin: 0;
    }

    @media (max-width: 768px) {
        .industries-section {
            padding: 4rem 0;
        }

        .section-title {
            font-size: 2rem;
        }

        .section-subtitle {
            font-size: 1.1rem;
        }

        .industries-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .industry-card {
            padding: 1.5rem;
        }

        .industry-icon {
            width: 60px;
            height: 60px;
            margin-bottom: 1rem;
        }

        .industry-icon svg {
            width: 30px;
            height: 30px;
        }
    }
</style>
